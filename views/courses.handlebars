<link rel="stylesheet" href="/css/courses.css">
<h1>Courses</h1>

<form>
    <fieldset>
        <legend>Add Course</legend>

        <label>Course Name</label>
        <input type="text" id="name" maxlength="255">

        <label>Units</label>
        <input type="number" id="units">

        <label>Department</label>
        <input list="departments" id="department">
        <datalist id="departments">
            <option value="Science">
            <option value="Liberal Arts">
            <option value="Engineering">
        </datalist>

        <label>Instructor</label>
        <input list="instructors" id="instructor">
        <datalist id="instructors">
            <option value="instructor 1">
            <option value="instructor 2">
            <option value="instructor 3">
        </datalist>

        <input type="submit" id="postSubmit">
    </fieldset>
</form>

<table class="table">
    <thead>
        <tr>ID</tr>
        <tr>Name</tr>
        <tr>Units</tr>
        <tr>Department</tr>
        <tr>Instructor</tr>
    </thead>
</table>