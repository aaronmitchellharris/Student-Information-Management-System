<link rel="stylesheet" href="/css/instructors.css">
<h1>Instructors</h1>

<form>
    <fieldset>
        <legend>Add Instructor</legend>

        <label>First Name:</label>
        <input type="text" id="fname" maxlength="255">

        <label>Last Name:</label>
        <input type="text" id="lname" maxlength="255">

        <label>Department</label>
        <input list="departments" id="department">
        <datalist id="departments">
            <option value="Science">
            <option value="Liberal Arts">
            <option value="Engineering">
        </datalist>

        <input type="submit" id="postSubmit">
    </fieldset>
</form>

<form>
    <fieldset>
        <legend>Remove Instructor</legend>

        <label>Instructor ID</label>
        <input type="number" id="id">

        <label>First Name:</label>
        <input type="text" id="fname" maxlength="255">

        <label>Last Name:</label>
        <input type="text" id="lname" maxlength="255">

        <label>Department</label>
        <input list="departments" id="department">
        <datalist id="departments">
            <option value="Science">
            <option value="Liberal Arts">
            <option value="Engineering">
        </datalist>

        <input type="submit" id="postRemove">
    </fieldset>
</form>

<table>
    <thead>
        <tr>ID</tr>
        <tr>First Name</tr>
        <tr>Last Name</tr>
        <tr>Department</tr>
    </thead>
</table>