<link rel="stylesheet" href="/css/departments.css">
<h1>Departments</h1>

<div class="card container mt-3">
    <form>
        <fieldset>
            <legend>Add Department</legend>

            <div class="m-3">
                <label>Department Code</label>
                <input type="text" class="form-control" id="code" maxlength="4">
            </div>

            <div class="m-3">
                <label>Department Name</label>
                <input type="text" class="form-control" id="name" maxlength="255">
            </div>

            <input type="submit" class="btn btn-primary m-3" id="postSubmit" value="Add">
        </fieldset>
    </form>
</div>

<div id="table" class="card container mt-3 mb-3">
    <table class="table">
        <thead>
            <tr>
                <th>CODE</th>
                <th>Name</th>
                <th>Instructor Count</th>
                <th>Course Count</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script src="/js/departments.js"></script>